{% doc %}
  @prompt
    Create a promotional homepage hero banner showcasing best-selling books with book cover image placeholders, featured titles, and promotional text. Include sections for highlighting multiple bestsellers, special pricing or offers, and a prominent call-to-action button. Design should be eye-catching with a bookshop aesthetic, warm colors, and space for book imagery that encourages browsing and purchasing.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .book-hero-banner-{{ ai_gen_id }} {
    position: relative;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .book-hero-banner__container-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
  }

  .book-hero-banner__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 30px;
  }

  .book-hero-banner__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin-bottom: 10px;
    font-weight: 700;
  }

  .book-hero-banner__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    max-width: 800px;
    margin: 0 auto20px;
  }

  .book-hero-banner__promotion-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.promotion_bg_color }};
    color: {{ block.settings.promotion_text_color }};
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .book-hero-banner__books-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 30px;
  }

  .book-hero-banner__book-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .book-hero-banner__book-image-container-{{ ai_gen_id }} {
    width: 100%;
    height: 0;
    padding-bottom: 150%; /* 2:3 aspect ratio for book covers */
    position: relative;
    margin-bottom: 15px;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border-radius: 5px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .book-hero-banner__book-image-container-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .book-hero-banner__book-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;}

  .book-hero-banner__book-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ block.settings.placeholder_bg_color }};
  }

  .book-hero-banner__book-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    fill: rgba(255, 255, 255, 0.2);
  }

  .book-hero-banner__book-title-{{ ai_gen_id }} {
    font-weight: 600;
    font-size: 16px;
    color: {{ block.settings.text_color }};
    margin-bottom: 5px;
  }

  .book-hero-banner__book-author-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin-bottom: 10px;
  }

  .book-hero-banner__book-price-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .book-hero-banner__book-price-original-{{ ai_gen_id }} {
    text-decoration: line-through;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    font-size: 14px;
  }

  .book-hero-banner__book-price-current-{{ ai_gen_id }} {
    font-weight: 700;
    color: {{ block.settings.price_color }};
    font-size: 16px;
  }

  .book-hero-banner__cta-container-{{ ai_gen_id }} {
    text-align: center;
    margin-top: 20px;
  }

  .book-hero-banner__cta-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    padding: 15px 30px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .book-hero-banner__cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 990px) {
    .book-hero-banner__books-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .book-hero-banner__books-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
    
    .book-hero-banner__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
    
    .book-hero-banner__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="book-hero-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="book-hero-banner__container-{{ ai_gen_id }}">
    <div class="book-hero-banner__header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="book-hero-banner__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.subheading != blank %}
        <div class="book-hero-banner__subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}
      
      {% if block.settings.promotion_text != blank %}
        <div class="book-hero-banner__promotion-{{ ai_gen_id }}">{{ block.settings.promotion_text }}</div>
      {% endif %}
    </div>
    
    <div class="book-hero-banner__books-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% assign book_image_key = 'book_' | append: i | append: '_image' %}
        {% assign book_title_key = 'book_' | append: i | append: '_title' %}
        {% assign book_author_key = 'book_' | append: i | append: '_author' %}
        {% assign book_price_key = 'book_' | append: i | append: '_price' %}
        {% assign book_compare_price_key = 'book_' | append: i | append: '_compare_price' %}
        
        {% if block.settings[book_title_key] != blank %}
          <div class="book-hero-banner__book-{{ ai_gen_id }}">
            <div class="book-hero-banner__book-image-container-{{ ai_gen_id }}">
              {% if block.settings[book_image_key] %}
                <img 
                  src="{{ block.settings[book_image_key] | image_url: width: 300 }}"
                  alt="{{ block.settings[book_title_key] }}"
                  class="book-hero-banner__book-image-{{ ai_gen_id }}"
                  loading="lazy"width="{{ block.settings[book_image_key].width }}"
                  height="{{ block.settings[book_image_key].height }}"
                >
              {% else %}
                <div class="book-hero-banner__book-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div><h3 class="book-hero-banner__book-title-{{ ai_gen_id }}">{{ block.settings[book_title_key] }}</h3>
            
            {% if block.settings[book_author_key] != blank %}
              <div class="book-hero-banner__book-author-{{ ai_gen_id }}">{{ block.settings[book_author_key] }}</div>
            {% endif %}
            
            <div class="book-hero-banner__book-price-{{ ai_gen_id }}">
              {% if block.settings[book_compare_price_key] != blank %}
                <span class="book-hero-banner__book-price-original-{{ ai_gen_id }}">{{ block.settings[book_compare_price_key] }}</span>
              {% endif %}
              
              {% if block.settings[book_price_key] != blank %}
                <span class="book-hero-banner__book-price-current-{{ ai_gen_id }}">{{ block.settings[book_price_key] }}</span>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <div class="book-hero-banner__cta-container-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="book-hero-banner__cta-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

