{% doc %}
  @prompt
    Create an elegant banner for classic books collection featuring timeless literature. The banner should have a sophisticated design with vintage typography, warm colors, and space for showcasing classic book covers. Include compelling text about timeless stories and literary classics, with a call-to-action button to browse the classic books collection. Make it customizable with different color schemes and layout options., feature the classic books in my products. each product with add to cart button

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .classic-books-feature-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .classic-books-feature__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 30px;
  }

  .classic-books-feature__heading-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, serif;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin-top: 0;
    margin-bottom: 15px;
    line-height: 1.2;
    font-weight: {{ block.settings.heading_font.weight }};
  }

  .classic-books-feature__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    max-width: 800px;
    margin: 0 auto;
  }

  .classic-books-feature__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .classic-books-feature__product-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.product_background_color }};
    border-radius: {{ block.settings.product_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .classic-books-feature__product-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .classic-books-feature__product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    padding-bottom: 130%;
    overflow: hidden;
    background-color: {{ block.settings.image_background_color }};
  }

  .classic-books-feature__product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .classic-books-feature__product-image-wrapper-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 20%;
    opacity: 0.7;
  }

  .classic-books-feature__product-{{ ai_gen_id }}:hover .classic-books-feature__product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .classic-books-feature__product-info-{{ ai_gen_id }} {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .classic-books-feature__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 600;
    line-height: 1.3;
  }

  .classic-books-feature__product-author-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_author_size }}px;
    color: {{ block.settings.product_author_color }};
    margin: 0 0 12px;
    font-style: italic;
  }

  .classic-books-feature__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
    margin: 0 0 15px;
  }

  .classic-books-feature__product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
    line-height: 1.5;
    flex-grow: 1;
  }

  .classic-books-feature__add-to-cart-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    padding: 10px 20px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s;
    text-align: center;
    border: none;
    cursor: pointer;
    font-size: {{ block.settings.button_text_size }}px;
  }

  .classic-books-feature__add-to-cart-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .classic-books-feature__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .classic-books-feature__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .classic-books-feature__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="classic-books-feature-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="classic-books-feature__header-{{ ai_gen_id }}">
    <h2 class="classic-books-feature__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    <div class="classic-books-feature__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
  </div>

  <div class="classic-books-feature__grid-{{ ai_gen_id }}">
    {% if block.settings.collection != blank %}
      {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
        <div class="classic-books-feature__product-{{ ai_gen_id }}">
          <div class="classic-books-feature__product-image-wrapper-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | img_url: '400x' }}" 
                alt="{{ product.featured_image.alt | escape }}"
                class="classic-books-feature__product-image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ product.featured_image.width }}"
                height="{{ product.featured_image.height }}"
              >
            {% else %}
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            {% endif %}
          </div>
          <div class="classic-books-feature__product-info-{{ ai_gen_id }}">
            <h3 class="classic-books-feature__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            
            {% if product.metafields.custom.author %}
              <p class="classic-books-feature__product-author-{{ ai_gen_id }}">by {{ product.metafields.custom.author }}</p>
            {% elsif product.vendor %}
              <p class="classic-books-feature__product-author-{{ ai_gen_id }}">by {{ product.vendor }}</p>
            {% endif %}
            
            <p class="classic-books-feature__product-price-{{ ai_gen_id }}">{{ product.price | money }}</p>
            
            {% if block.settings.show_description %}
              <div class="classic-books-feature__product-description-{{ ai_gen_id }}">
                {{ product.description | strip_html | truncatewords: 20 }}
              </div>
            {% endif %}
            
            <form method="post" action="/cart/add">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <input type="hidden" name="quantity" value="1">
              <button type="submit" class="classic-books-feature__add-to-cart-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </button>
            </form>
          </div>
        </div>
      {% endfor %}
    {% else %}
      {% for i in (1..4) %}
        <div class="classic-books-feature__product-{{ ai_gen_id }}">
          <div class="classic-books-feature__product-image-wrapper-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
          </div>
          <div class="classic-books-feature__product-info-{{ ai_gen_id }}">
            <h3 class="classic-books-feature__product-title-{{ ai_gen_id }}">Classic Book Title</h3>
            <p class="classic-books-feature__product-author-{{ ai_gen_id }}">by Famous Author</p>
            <p class="classic-books-feature__product-price-{{ ai_gen_id }}">$24.99</p>
            {% if block.settings.show_description %}
              <div class="classic-books-feature__product-description-{{ ai_gen_id }}">
                A timeless classic that has captivated readers for generations.
              </div>
            {% endif %}
            <button class="classic-books-feature__add-to-cart-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </button>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

